<resources>
    <!-- Dark application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorSystemBar</item>
        <item name="colorPrimaryDark">@color/customBlack</item>
        <item name="colorAccent">@color/customLightGray</item>
    </style>

    <!-- Light application theme. -->
    <style name="LightTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorSystemBar</item>
        <item name="colorPrimaryDark">@color/colorLabelBar</item>
        <item name="colorAccent">@color/customMiddleGray</item>
    </style>

    <style name="FullScreen" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="colored_checkbox" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/googleGreen</item>
        <item name="android:textColorSecondary">@color/googleYellow</item>
    </style>

</resources>