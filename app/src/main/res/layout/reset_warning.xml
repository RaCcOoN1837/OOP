<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/customDarkGray">

    <TextView
        android:id="@+id/RESETtv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/hindsiliguri_bold"
        android:textColor="@color/customWhite"
        android:textSize="22sp" />

    <Button
        android:id="@+id/RESETbtnOK"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_red_button"
        android:fontFamily="@font/hindsiliguri_bold"
        android:text="@string/ok"
        android:textAllCaps="false"
        android:textColor="@color/customWhite"
        android:textSize="22sp" />

    <Button
        android:id="@+id/RESETbtnCancel"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_yellow_button"
        android:fontFamily="@font/hindsiliguri_bold"
        android:text="@string/cancel"
        android:textAllCaps="false"
        android:textColor="@color/customWhite"
        android:textSize="22sp" />
</LinearLayout>